extends layout

block content
  h1= title
  form(action='' method='POST' class="signUpForm")
    label(for='name') Name
    input(name='name' placeholder='name' type='text' required value=(undefined===user ? '' : user.name)) 
    label(for='surname') Surname
    input(name='surname' placeholder='surname' type='text' required value=(undefined===user ? '' : user.surname)) 
    label(for='username') Username (Email)
    input(name='username' placeholder='username' type='text' required value=(undefined===user ? '' : user.username))
    label(for='password') Password
    input(name='password' placeholder='password' type='password')
    label(for='passwordConfirm') Confirm Password
    input(name='passwordConfirm' placeholder='confirm password' type='password' required)
    button Sign Up

  if errors
    ul
      for error in errors
        li!= error.msg